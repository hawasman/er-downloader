{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "convergence-downloader",
  "version": "0.1.0",
  "identifier": "com.convergence-downloader.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Convergence Downloader",
        "width": 800,
        "height": 600,
        "resizable": false,
        "decorations": true,
        "fullscreen": false,
        "maximized": false
      }
    ],
    "security": {
      "csp": "default-src blob: data: filesystem: ws: wss: http: https: tauri: 'unsafe-eval' 'unsafe-inline' 'self' img-src: 'self'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "publisher": "Convergence Mod Team.",
    "copyright": "Convergence Mod Team.",
    "category": "Utility",
    "shortDescription": "Convergence Downloader",
    "longDescription": "Convergence Downloader is a tool for downloading and updating the Convergence mod for Elden Ring.",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "webviewInstallMode": {
        "type": "embedBootstrapper",
        "silent": true
      },
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  }
}
